<UserControl x:Class="InternetStore.Controls.ProfileIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InternetStore.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Gray" >
            <Button Click="ProfileNavigate">
                <DockPanel >
                    <Border CornerRadius="5" BorderBrush="Wheat" BorderThickness="1">
                        <Image></Image>
                    </Border>
                    <TextBlock Width="100" Foreground="Black" Background="White" Text="{Binding Path=UserName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ></TextBlock>
                </DockPanel>
            </Button>
        </Border>
    </Grid>
</UserControl>
