<UserControl x:Class="InternetStore.Controls.ProfileIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InternetStore.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Gray" >
            <DockPanel>
                <Border DockPanel.Dock="Left" CornerRadius="10" BorderBrush="Wheat" BorderThickness="2">
                    <Image Width="15" Height="15"></Image>
                </Border>
                <TextBlock DockPanel.Dock="Right" Width="100" Foreground="Black" Background="White" Text="{Binding Path=UserName, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" ></TextBlock>
                <Button DockPanel.Dock="Right" Style="{DynamicResource MaterialDesignFloatingActionDarkButton}"></Button>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
