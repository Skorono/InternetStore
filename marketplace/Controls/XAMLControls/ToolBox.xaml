<UserControl x:Class="InternetStore.Controls.XAMLControls.ToolBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InternetStore.Controls.XAMLControls"
             xmlns:ic="clr-namespace:InternetStore.Controls.XAMLControls.Icons"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
            <ColumnDefinition Width="0.7*"></ColumnDefinition>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <local:SearchBox Grid.Row="0" Grid.Column="1" Margin="0 0 20 0" ></local:SearchBox>
        <ic:ProfileIcon x:Name="ProfileIcon" Grid.Column="2" Grid.Row="0" ></ic:ProfileIcon>
        <ic:BasketIcon x:Name="BasketIcon" Grid.Column="3" Grid.Row="0"></ic:BasketIcon>
    </Grid>
</UserControl>
