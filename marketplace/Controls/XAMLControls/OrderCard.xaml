<cont:ViewControl x:Class="InternetStore.Controls.XAMLControls.OrderCard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:cont="clr-namespace:InternetStore.Controls"
      xmlns:local="clr-namespace:InternetStore.Controls.XAMLControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <materialDesign:Card MaxWidth="125" MaxHeight="75" MinWidth="250" MinHeight="125">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" >
                    
                </TextBlock>

                <Button x:Name="StatusButton" MaxHeight="35" MaxWidth="75" BorderThickness="1" Grid.Column="1" Background="#FF25C35A"></Button>
            </Grid>
        </materialDesign:Card>  
    </Grid>
</cont:ViewControl>
