<UserControl x:Class="InternetStore.Controls.XAMLControls.SideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InternetStore.Controls.XAMLControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Expander ExpandDirection="Right" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            <Grid>
                <Grid.ColumnDefinitions>
                    
                </Grid.ColumnDefinitions>
                
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                
                <local:CostPicker Grid.Row="0"></local:CostPicker>

                <ListView Grid.Row="2" Width="450" x:Name="CategoryList">
                    
                </ListView>
            </Grid>
        </Expander>
    </Grid>
</UserControl>
