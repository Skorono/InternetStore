<UserControl x:Class="InternetStore.Controls.XAMLControls.SideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InternetStore.Controls.XAMLControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Expander ExpandDirection="Right" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            <Grid x:Name="grid" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <!--<local:CostPicker x:Name="CostPicker" MinCost="0" MaxCost="1000000" Margin="0 20" Grid.Row="0" Grid.Column="0"/>-->
                <local:CategoryList x:Name="CategoriesList" Grid.Row="2" Grid.Column="0"/>
            </Grid>
        </Expander>
    </Grid>
</UserControl>
