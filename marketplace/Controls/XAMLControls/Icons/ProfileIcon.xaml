<local:ChangeablePropertiesClass x:Class="InternetStore.Controls.XAMLControls.Icons.ProfileIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InternetStore.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Gray" >
            <UniformGrid Columns="3">
                <Border Width="45" Height="45" CornerRadius="20" BorderBrush="Wheat" BorderThickness="1">
                    <Image></Image>
                </Border>
                <TextBlock DockPanel.Dock="Right" Width="100" Foreground="Black" Background="White" Text="{Binding Path=UserName, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" ></TextBlock>
                <Button DockPanel.Dock="Right" Style="{DynamicResource MaterialDesignFloatingActionDarkButton}" Click="Navigate"></Button>
            </UniformGrid>
        </Border>
    </Grid>
</local:ChangeablePropertiesClass>
