<con:ViewControl x:Class="InternetStore.Controls.XAMLControls.TextBlockButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:con="clr-namespace:InternetStore.Controls"
             xmlns:local="clr-namespace:InternetStore.Controls.XAMLControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button HorizontalAlignment="Stretch" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" BorderThickness="0" Click="Clicked">
            <TextBlock x:Name="InnerBlock"></TextBlock>
        </Button>
    </Grid>
</con:ViewControl>
