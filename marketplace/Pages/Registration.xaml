<Page x:Class="InternetStore.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ef="clr-namespace:InternetStore.Controls"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:local="clr-namespace:InternetStore"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <ef:ElementField>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="250"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition MinHeight="300"></RowDefinition>
            </Grid.RowDefinitions>

            <Canvas Grid.Column="0" Grid.Row="0">
                <Border BorderBrush="#FF822BAD" Background="#FF6F2096" BorderThickness="2" Height="250" Width="300" Margin="25, 20, 0, 0">
                    <Canvas>
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Width="150">
                                <StackPanel.Resources>
                                    <Style TargetType="{x:Type xctk:WatermarkTextBox}">
                                        <Setter Property="Margin" Value="2"></Setter>
                                    </Style>
                                </StackPanel.Resources>
                                <xctk:WatermarkTextBox Watermark="Имя"/>
                                <xctk:WatermarkTextBox Watermark="Фамилия"/>
                                <xctk:WatermarkTextBox Watermark="Отчество"/>
                                <xctk:WatermarkTextBox Watermark="Пароль"/>
                            </StackPanel>
                        </Grid>
                    </Canvas>
                </Border>
            </Canvas>
        </Grid>
    </ef:ElementField>
</Page>
